<Page x:Class="PayRollAttendance.ShiftsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PayRollAttendance"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShiftsPage">

    <Grid>
        <TextBlock x:Name="empNameTextBlock" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Width="120"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Top" Height="321" Margin="30,60,0,0" Width="524" >
            <StackPanel x:Name="employeesPanel">
            </StackPanel>
        </ScrollViewer>
        <Rectangle HorizontalAlignment="Left" Height="321" Margin="559,60,0,0" Stroke="Black" VerticalAlignment="Top" Width="1"/>
        <TextBlock x:Name="shiftsTextBlock" HorizontalAlignment="Left" Margin="565,60,0,0" TextWrapping="Wrap" Text="Total shifts: " VerticalAlignment="Top"/>
        <TextBlock x:Name="hoursTextBlock" HorizontalAlignment="Left" Margin="565,76,0,0" TextWrapping="Wrap" Text="Total hours: " VerticalAlignment="Top"/>

    </Grid>
</Page>
