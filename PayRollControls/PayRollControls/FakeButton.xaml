<UserControl x:Class="PayRollControls.FakeButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PayRollControls"
             mc:Ignorable="d" 
                                       d:DesignHeight="40" d:DesignWidth="80">
    <UserControl.Resources>
        <Style x:Key="CenteredTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    <Border BorderThickness="0.5" BorderBrush="Black">
        <Grid Background="DimGray">
            <TextBlock x:Name="Content" HorizontalAlignment="Center" Style="{StaticResource CenteredTextBlockStyle}" TextWrapping="Wrap" VerticalAlignment="Center" Height="15" Width="80"/>
        </Grid>
    </Border>
</UserControl>
