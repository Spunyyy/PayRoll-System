<Window x:Class="PayRoll_System.SelectDayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PayRoll_System"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SelectDayWindow" Height="150" Width="266">
    <Grid>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <Button x:Name="okButton" Content="-OK-" Margin="110,50,0,0" HorizontalAlignment="Center" Width="100" Height="40" Click="okButton_Click"/>
        <Button x:Name="stornoButton" Content="Storno" Margin="0,50,110,0" HorizontalAlignment="Center" Width="100" Height="40" Click="stornoButton_Click"/>
    </Grid>
</Window>
